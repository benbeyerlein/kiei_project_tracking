<div class="page-header">
  <h1>Add Delivery Type</h1>
</div>

<% if @delivery_type.errors.any? %>
  <% @delivery_type.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_delivery_type" class="form-horizontal">
  <!-- Label and input for carrier_id -->
  <div class="form-group">
    <label for="carrier_id" class="col-sm-2 control-label">
      Carrier
    </label>
    <div class="col-sm-10">
      <input type="text" id="carrier_id" name="carrier_id" placeholder="Carrier" class="form-control" value="<%= @delivery_type.carrier_id %>">
    </div>
  </div>

  <!-- Label and input for delivery_type -->
  <div class="form-group">
    <label for="delivery_type" class="col-sm-2 control-label">
      Delivery type
    </label>
    <div class="col-sm-10">
      <input type="text" id="delivery_type" name="delivery_type" placeholder="Delivery type" class="form-control" value="<%= @delivery_type.delivery_type %>">
    </div>
  </div>

  <!-- Label and input for tracking_number_format -->
  <div class="form-group">
    <label for="tracking_number_format" class="col-sm-2 control-label">
      Tracking number format
    </label>
    <div class="col-sm-10">
      <input type="text" id="tracking_number_format" name="tracking_number_format" placeholder="Tracking number format" class="form-control" value="<%= @delivery_type.tracking_number_format %>">
    </div>
  </div>

  <!-- Label and input for tracking_number_checksum -->
  <div class="form-group">
    <label for="tracking_number_checksum" class="col-sm-2 control-label">
      Tracking number checksum
    </label>
    <div class="col-sm-10">
      <input type="text" id="tracking_number_checksum" name="tracking_number_checksum" placeholder="Tracking number checksum" class="form-control" value="<%= @delivery_type.tracking_number_checksum %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Delivery Type" class="btn btn-primary">
    </div>
  </div>
</form>
