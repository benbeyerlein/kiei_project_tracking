<div class="page-header">
  <h1>Edit Package #<%= @package.id %></h1>
</div>

<% if @package.errors.any? %>
  <% @package.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_package/<%= @package.id %>" class="form-horizontal">
  <!-- Label and input for sender_name -->
  <div class="form-group">
    <label for="sender_name" class="col-sm-2 control-label">
      Sender name
    </label>
    <div class="col-sm-10">
      <input type="text" id="sender_name" name="sender_name" placeholder="Sender name" class="form-control" value="<%= @package.sender_name %>">
    </div>
  </div>

  <!-- Label and input for send_date -->
  <div class="form-group">
    <label for="send_date" class="col-sm-2 control-label">
      Send date
    </label>
    <div class="col-sm-10">
      <input type="text" id="send_date" name="send_date" placeholder="Send date" class="form-control" value="<%= @package.send_date %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @package.notes %></textarea>
    </div>
  </div>

  <!-- Label and input for carrier_id -->
  <div class="form-group">
    <label for="carrier_id" class="col-sm-2 control-label">
      Carrier
    </label>
    <div class="col-sm-10">
      <input type="text" id="carrier_id" name="carrier_id" placeholder="Carrier" class="form-control" value="<%= @package.carrier_id %>">
    </div>
  </div>

  <!-- Label and input for tracking_number -->
  <div class="form-group">
    <label for="tracking_number" class="col-sm-2 control-label">
      Tracking number
    </label>
    <div class="col-sm-10">
      <input type="text" id="tracking_number" name="tracking_number" placeholder="Tracking number" class="form-control" value="<%= @package.tracking_number %>">
    </div>
  </div>

  <!-- Label and input for delivery_type_id -->
  <div class="form-group">
    <label for="delivery_type_id" class="col-sm-2 control-label">
      Delivery type
    </label>
    <div class="col-sm-10">
      <input type="text" id="delivery_type_id" name="delivery_type_id" placeholder="Delivery type" class="form-control" value="<%= @package.delivery_type_id %>">
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @package.user_id %>">
    </div>
  </div>

  <!-- Label and input for tracking_number_status_id -->
  <div class="form-group">
    <label for="tracking_number_status_id" class="col-sm-2 control-label">
      Tracking number status
    </label>
    <div class="col-sm-10">
      <input type="text" id="tracking_number_status_id" name="tracking_number_status_id" placeholder="Tracking number status" class="form-control" value="<%= @package.tracking_number_status_id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Package" class="btn btn-primary">
    </div>
  </div>
</form>
