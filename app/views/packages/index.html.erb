<div class="page-header">
  <h1>Packages</h1>
</div>

<p><a href="/packages/new" class="btn btn-primary">Add a New Package</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Sender name</th>
      <th>Send date</th>
      <th>Notes</th>
      <th>Carrier</th>
      <th>Tracking number</th>
      <th>Delivery type</th>
      <th>User</th>
      <th>Tracking number status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.sender_name %></td>
        <td><%= package.send_date %></td>
        <td><%= package.notes %></td>
        <td><%= package.carrier_id %></td>
        <td><%= package.tracking_number %></td>
        <td><%= package.delivery_type_id %></td>
        <td><%= package.user_id %></td>
        <td><%= package.tracking_number_status_id %></td>
        <td>
          <a href="/packages/<%= package.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/packages/<%= package.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_package/<%= package.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

