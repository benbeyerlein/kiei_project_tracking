<div class="page-header">
  <h1>My Packages</h1>
</div>

<div class="track-package">
  <h2>Track a Package</h2>
</div>


<form action="/create_package" class="form-horizontal">
  <!-- Label and input for sender_name -->
  <div class="form-group">
    <label for="sender_name" class="col-sm-2 control-label">
      Sender name
    </label>
    <div class="col-sm-10">
      <input type="text" id="sender_name" name="sender_name" placeholder="Sender name" class="form-control" value="<%= @package.sender_name %>">
    </div>
  </div>

  <!-- Label and input for send_date -->
  <div class="form-group">
    <label for="send_date" class="col-sm-2 control-label">
      Date Sent (YYYY-MM-DD)
    </label>
    <div class="col-sm-10">
      <input type="text" id="send_date" name="send_date" placeholder="YYYY-MM-DD" class="form-control" value="<%= @package.send_date %>">
    </div>
  </div>

  <!-- Label and input for notes -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">
      Notes
    </label>
    <div class="col-sm-10">
      <textarea id="notes" name="notes" placeholder="Notes" class="form-control" rows="3"><%= @package.notes %></textarea>
    </div>
  </div>

  <!-- Label and input for carrier_id -->
  <div class="form-group">
    <label for="carrier_id" class="col-sm-2 control-label">
      Carrier
    </label>
    <div class="col-sm-10">
      <select name="carrier_id" class="form-control">
        <% Carrier.all.each do |carrier| %>
          <option value="<%= carrier.id %>">
            <%= carrier.name %>
          </option>
        <% end %>
      </select>
    </div>
  </div>

  <!-- Label and input for tracking_number -->
  <div class="form-group">
    <label for="tracking_number" class="col-sm-2 control-label">
      Tracking number
    </label>
    <div class="col-sm-10">
      <input type="text" id="tracking_number" name="tracking_number" placeholder="Tracking number" class="form-control" value="<%= @package.tracking_number %>">
    </div>
  </div>

  <!-- Label and input for delivery_type_id -->
  <div class="form-group">
    <label for="delivery_type_id" class="col-sm-2 control-label">
      Delivery type
    </label>
    <div class="col-sm-10">
      <select name="delivery_type_id" class="form-control">
        <% dt =  DeliveryType.find_by(:carrier_id => 1) %> <!-- Temporary hack -->
          <option value="<%= dt.id %>">
            <%= dt.delivery_type %>
          </option>
      </select>
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
    </div>
  </div>

  <!-- Label and input for tracking_number_status_id -->
  <div class="form-group">
    <label for="tracking_number_status_id" class="col-sm-2 control-label">
      Tracking number status
    </label>
    <div class="col-sm-10">
      <select name="tracking_number_status_id" class="form-control">
        <% track_num_status =  TrackingNumberStatus.find(1) %> <!-- Temporary hack -->
          <option value="<%= track_num_status.id %>">
            <%= track_num_status.status %>
          </option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Package" class="btn btn-primary">
    </div>
  </div>
</form>

<div class="track-package">
  <h2>My Packages</h2>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tracking #</th>
      <th>Sender</th>
      <th>Carrier</th>
      <th>Sent On</th>
      <th>Delivered On</th>
      <th>Transit Duration</th>
      <th>Delivery Status</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><a href="/packages/<%= package.id %>"><%= package.tracking_number %></a></td>
        <td><%= package.sender_name %></td>
        <td><%= package.carrier.name %></td>
        <td><%= package.tracking_details.first.activity_datetime.to_s(:long) %></td>
        <td><%= package.tracking_details.last.activity_datetime.to_s(:long) %></td>
        <% if package.tracking_details.last.activity_note.titleize == "Delivered" %>
          <td><%= distance_of_time_in_words(package.tracking_details.first.activity_datetime, package.tracking_details.last.activity_datetime) %></td>
        <% else %>
          <td>-</td>
        <% end %>
        <% if package.tracking_details.last.activity_note.titleize == "Delivered" %>
          <td>Delivered</td>
        <% else %>
          <td>In Transit <a href="#">Update</a></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>



