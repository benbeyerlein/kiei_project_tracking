<div class="page-header">
  <h1>Package #<%= @package.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Sender name</dt>
  <dd><%= @package.sender_name %></dd>

  <dt>Send date</dt>
  <dd><%= @package.send_date %></dd>

  <dt>Notes</dt>
  <dd><%= @package.notes %></dd>

  <dt>Carrier</dt>
  <dd><%= @package.carrier.name %></dd>

  <dt>Tracking number</dt>
  <dd><%= @package.tracking_number %></dd>

  <dt>Delivery type</dt>
  <dd><%= @package.carrier.delivery_types.first.delivery_type %></dd>

  <dt>User</dt>
  <dd><%= @package.user.email %></dd>

  <dt>Tracking number status</dt>
  <dd><%= @package.tracking_number_status.status %></dd>

  <dt>Package Status</dt>
  <dd><%= @package.tracking_details.last.activity_note.titleize.gsub(/Usps/, "USPS") %></dd>

</dl>

<h2>Tracking Detail</h2>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Event datetime</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Event</th>
    </tr>
  </thead>

  <tbody>
    <% @package.tracking_details.each do |tracking_detail| %>
      <tr>
        <td><%= tracking_detail.activity_datetime.to_s(:long) %></td>
        <td><%= tracking_detail.city.titleize %></td>
        <td><%= tracking_detail.state %></td>
        <td><%= tracking_detail.zip %></td>
        <td><%= tracking_detail.activity_note.titleize.gsub(/Usps/, "USPS") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <h2>Package Route</h2>
</div>

<div>

  <iframe
    width="800"
    height="600"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/directions?key=AIzaSyD7PLftI1CYjs8EXzNAJcmWDbQ0yt4Zixo&origin=<%= @origin_zip %><%= @waypoint_zips %>&destination=<%= @last_zip %>">
  </iframe>

</div>
