<div class="page-header">
  <h1>Edit Tracking Detail #<%= @tracking_detail.id %></h1>
</div>

<% if @tracking_detail.errors.any? %>
  <% @tracking_detail.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_tracking_detail/<%= @tracking_detail.id %>" class="form-horizontal">
  <!-- Label and input for shipment_id -->
  <div class="form-group">
    <label for="shipment_id" class="col-sm-2 control-label">
      Shipment
    </label>
    <div class="col-sm-10">
      <input type="text" id="shipment_id" name="shipment_id" placeholder="Shipment" class="form-control" value="<%= @tracking_detail.shipment_id %>">
    </div>
  </div>

  <!-- Label and input for activity_datetime -->
  <div class="form-group">
    <label for="activity_datetime" class="col-sm-2 control-label">
      Activity datetime
    </label>
    <div class="col-sm-10">
      <input type="text" id="activity_datetime" name="activity_datetime" placeholder="Activity datetime" class="form-control" value="<%= @tracking_detail.activity_datetime %>">
    </div>
  </div>

  <!-- Label and input for city -->
  <div class="form-group">
    <label for="city" class="col-sm-2 control-label">
      City
    </label>
    <div class="col-sm-10">
      <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @tracking_detail.city %>">
    </div>
  </div>

  <!-- Label and input for state -->
  <div class="form-group">
    <label for="state" class="col-sm-2 control-label">
      State
    </label>
    <div class="col-sm-10">
      <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @tracking_detail.state %>">
    </div>
  </div>

  <!-- Label and input for zip -->
  <div class="form-group">
    <label for="zip" class="col-sm-2 control-label">
      Zip
    </label>
    <div class="col-sm-10">
      <input type="text" id="zip" name="zip" placeholder="Zip" class="form-control" value="<%= @tracking_detail.zip %>">
    </div>
  </div>

  <!-- Label and input for activity_note -->
  <div class="form-group">
    <label for="activity_note" class="col-sm-2 control-label">
      Activity note
    </label>
    <div class="col-sm-10">
      <input type="text" id="activity_note" name="activity_note" placeholder="Activity note" class="form-control" value="<%= @tracking_detail.activity_note %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Tracking Detail" class="btn btn-primary">
    </div>
  </div>
</form>
