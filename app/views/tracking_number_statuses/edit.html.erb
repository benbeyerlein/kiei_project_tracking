<div class="page-header">
  <h1>Edit Tracking Number Status #<%= @tracking_number_status.id %></h1>
</div>

<% if @tracking_number_status.errors.any? %>
  <% @tracking_number_status.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_tracking_number_status/<%= @tracking_number_status.id %>" class="form-horizontal">
  <!-- Label and input for status -->
  <div class="form-group">
    <label for="status" class="col-sm-2 control-label">
      Status
    </label>
    <div class="col-sm-10">
      <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @tracking_number_status.status %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Tracking Number Status" class="btn btn-primary">
    </div>
  </div>
</form>
